@model Item

<h3 class="my-5">
    @Model.Name
</h3>

<div class="row gx-5">
    <img alt="@Model.Name" src="@Model.ImageUrl" class="img-fluid col-5" style="height: 300px; object-fit: contain" />
    <div class="col-7">
        <h5>@Model.Description</h5>
        <h3 class="pull-right">@Model.Price.ToString("0.00 NOK per night")</h3>
        <h5>@Model.Address</h5>
        <h5>Phone number: @Model.Phone</h5>
        <h5>Rooms: @Model.Rooms</h5>
        <h5>Beds: @Model.Beds</h5>
        <p><a href="/Item/Table">Back to Table View</a></p>
        <p><a href="/Item/Grid">Back to Grid View</a></p>
    </div>
</div>


