@model Item 

<div class="col">
    <div>
        <img src="@Model.ImageUrl" class="card-img-top" style="height: 20vh; object-fit: cover;" alt="@Model.Name">
        <div class="mt-2">
            <div class="d-flex justify-content-between">
                <h5 class="text-start">
                    <a asp-controller="Item"
                       asp-action="Details"
                       asp-route-id="@Model.ItemId">@Model.Name</a>
                </h5>
                <h5 class="text-nowrap">
                    @Model.Price.ToString("0 NOK")
                </h5>
            </div>
        </div>
    </div>
</div>