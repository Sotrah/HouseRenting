@model Item 

<div class="col">
    <div>
        <img src="@Model.ImageUrl" class="card-img-top" style="height: 40vh; object-fit: cover;" alt="@Model.Name">
        <div class="mt-2">
            <div class="d-flex justify-content-between">
                <h6 class="text-start">
                    <a asp-controller="Item"
                       asp-action="Details"
                       asp-route-id="@Model.ItemId">@Model.Name</a>
                </h6>
                <h6 class="text-nowrap">
                    @Model.Price.ToString("0 NOK per night")
                </h6>
            </div>
        </div>
    </div>
</div>